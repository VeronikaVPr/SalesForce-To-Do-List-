<aura:component controller ="TopPeopleController" implements ="flexipage:availableForAllPageTypes">
	<aura:attribute name = "people" type = "Person__c[]"/>
    <aura:attribute name = "limitNumber" type = "Integer" default="10"/>
    <aura:attribute name = "columns" type = "List"/>

    <aura:handler name = "init" value = "{!this}" action = "{!c.doInit}"/>
    <aura:handler name = "change" value="{!v.limitNumber}" action="{!c.reLoadPeople}"/>
    

    <div class = "sldx-box slds-theme_default">
        <lightning:layout>
             <lightning:layoutItem padding="around-small" size="9">
                <lightning:datatable keyField="Id" data="{!v.people}" columns="{!v.columns}" hidecheckboxColumn="true"/>
            </lightning:layoutItem>

            <lightning:layoutItem>
                <ui:inputNumber label="Number of Person: " value="{!v.limitNumber}" updateOn="keyup"/>
            </lightning:layoutItem>
         </lightning:layout>
    </div>
</aura:component>